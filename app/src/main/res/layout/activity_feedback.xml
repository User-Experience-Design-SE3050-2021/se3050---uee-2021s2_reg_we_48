<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feedback">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="640dp"
        app:cardBackgroundColor="#EF5F5F"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/logo"
            app:srcCompat="@drawable/aaa_560x636" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="102dp"
            android:layout_marginTop="35dp"
            android:text="@string/mirrormirror_lk"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/menu"
            app:srcCompat="@drawable/ic_baseline_menu_24" />

        <ImageView
            android:id="@+id/imageprofile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="310dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/person"
            app:srcCompat="@drawable/ic_round_person_24" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/cartIc"
            app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="49dp"
            android:layout_height="42dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="90dp"
            android:contentDescription="@string/back"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="86dp"
            android:text="@string/feed_back"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageWishlistFilled"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="275dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_wishlist_filled"
            app:cornerRadius="40dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="  Frequently Asked Questions"
        android:textAlignment="textStart"
        android:textColor="#E6EE4040"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.209" />

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.746">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView01"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/card_edge"
            app:contentPadding="1dp"
            app:cornerRadius="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck">

            <TextView
                android:id="@+id/textQuestion1"
                android:layout_width="284dp"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:text="@string/feedback_question1"
                android:textAlignment="center"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/imageBtnQ1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="310dp"
                android:backgroundTint="?android:attr/colorBackground"
                app:srcCompat="@drawable/ic_dropdown_arrow"
                tools:ignore="SpeakableTextPresentCheck" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/hidden_view"
            android:layout_width="382dp"
            android:layout_height="48dp"
            android:layout_marginLeft="-360dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:visibility="gone">

            <!--Child LinearLayout 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Database Management"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView02"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="-360dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/cardborder_style">

            <TextView
                android:id="@+id/textQuestion2"
                android:layout_width="307dp"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:text="@string/feedback_question2"
                android:textAlignment="center"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/imageBtnQ2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="310dp"
                android:backgroundTint="?android:attr/colorBackground"
                app:srcCompat="@drawable/ic_dropdown_arrow"
                tools:ignore="SpeakableTextPresentCheck" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView03"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="-360dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/cardborder_style">

            <TextView
                android:id="@+id/textQuestion3"
                android:layout_width="284dp"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:text="@string/feedback_question3"
                android:textAlignment="center"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/imageBtnQ3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="310dp"
                android:backgroundTint="?android:attr/colorBackground"
                app:srcCompat="@drawable/ic_dropdown_arrow"
                tools:ignore="SpeakableTextPresentCheck" />

        </androidx.cardview.widget.CardView>

    </TableRow>

    <TextView
        android:id="@+id/textViewContactUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:text="@string/contact_us_title"
        android:textAlignment="textStart"
        android:textColor="#E6EE4040"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="320dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="#CCEE4040"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView2"
        app:layout_constraintVertical_bias="0.758">

        <EditText
            android:id="@+id/inputTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/edittext1_style"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/feedback_name"
            android:textAlignment="textStart"
            android:textColor="#808080"
            android:textColorHint="#FFFFFF"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/inputTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/edittext1_style"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="@string/feedback_email"
            android:textAlignment="textStart"
            android:textColor="#808080"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/inputTextPhone"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/edittext1_style"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:inputType="phone"
            android:text="@string/feedback_contactno"
            android:textAlignment="textStart"
            android:textColor="#808080"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/inputMsgTextMultiLine"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/edittext1_style"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="@string/feedback_msg"
            android:textAlignment="textStart"
            android:textColor="#808080" />

        <Button
            android:id="@+id/buttonFeedbackSubmit"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/white"
            android:text="@string/submit_feedback"
            android:textAllCaps="false"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            app:cornerRadius="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_save"
            tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>